<Window x:Class="PresentationLayer.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        mc:Ignorable="d"
       Title="Book Adder" MinHeight ="300" MinWidth="280" Height="300" Width="280">


    <Border Padding="10" Background="SkyBlue">
        <StackPanel>
            <TextBlock Text="Adding new book" FontWeight="Bold" Margin="0 10" TextAlignment="Center"/>

            <TextBlock Text="Author" TextAlignment="Center"/>
            <TextBox x:Name="AuthorText" Padding="2" />
            <TextBlock Text="Title" Margin="0 10 0 0" TextAlignment="Center"/>
            <TextBox x:Name="TitleText" Padding="2" />
            <TextBlock Text="Year" Margin="0 10 0 0" TextAlignment="Center" />
            <TextBox x:Name="YearText" Padding="2" />
        
            <Button x:Name="AddBookButton" Click="AddBookButton_Click" Margin="30 20 30 10" Content="Add Book"/>
            <Button x:Name="CloseButton" Click="CloseButton_Click" Margin="30 0 30 0" Content="Close"/>
        </StackPanel>
    </Border>
</Window>
